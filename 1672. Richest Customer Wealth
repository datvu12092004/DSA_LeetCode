#include<stdio.h>
#include<math.h>

int findMax(int arr[], int n)
{  
  int max = arr[0];
  for(int k = 0; k < n; k++)
  {
    if(arr[k] >=  max)
    {
      max = arr[k];
    }
  }
  return max;
}
int main()
{ 
  int hang, cot;
  scanf("%d %d", &hang, &cot);
  int accounts[hang][cot];
  int tong[hang];
  int sum = 0;
 
  for(int i = 0; i < hang; i++)
  { 
    printf("Nhap phan tu mang con so %d: ", i+1);
    for(int j = 0; j < cot; j++)
    {
      scanf("%d", &accounts[i][j]);
      sum += accounts[i][j];
    }
    tong[i] = sum;
    sum = 0;
  }

  printf("%d", findMax(tong, hang));
    
 


}
